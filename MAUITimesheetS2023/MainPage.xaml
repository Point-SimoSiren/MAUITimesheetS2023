<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITimesheetS2023.MainPage">

        <TabbedPage.Resources>
                       <StyleSheet Source="Resources/Styles/Styles.css" />
        </TabbedPage.Resources>


            <!-- *********** Button page *************** -->
    <ContentPage Title="Button sample">
        <StackLayout StyleClass="body">
            <Label x:Name="OmaLabel" FontSize="30" Margin="30, 30, 30, 30" />
            <Button x:Name="OmaNappi" Clicked="OmaNappi_Clicked" Text="Say Hello" Padding="30" CornerRadius="20" />
    </StackLayout>    
</ContentPage>

    <!-- ******  Slider  page ************ -->
    <ContentPage Title="Slider sample">
        <StackLayout>
            
            <Label x:Name="NumeroLabel" Text="{Binding Source={x:Reference Liuku1},
            Path=Value, StringFormat='Säätö: {0:N0}' }" FontSize="30" Margin="30, 30, 30, 30" />
            
            <Slider x:Name="Liuku1" />
            
        </StackLayout>
    </ContentPage>


</TabbedPage>
